<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Class="MessengerWPF.UserControls.OtherMessage"
             xmlns:Ui="clr-namespace:EmojiBox.Ui;assembly=EmojiBox"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid HorizontalAlignment="Left" Width="300">
        <TextBlock x:Name="SenderName" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="15"/>
        <Border BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFBDBDBD" CornerRadius="8" Margin="0,15,0,0">
            <Ui:EmojiRichTextBox x:Name="OtherMessageBox" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" IsReadOnly="True"/>
        </Border>

    </Grid>
</UserControl>
