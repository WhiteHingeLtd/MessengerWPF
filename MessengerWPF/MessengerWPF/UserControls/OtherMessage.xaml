<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" x:Name="OtherMessageControl" 
             x:Class="MessengerWPF.UserControls.OtherMessage"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid HorizontalAlignment="Left" Width="300">
        <TextBlock x:Name="SenderName" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="15"/>
        <Border x:Name="OtherMessageBorder" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFBDBDBD" CornerRadius="8" Margin="0,15,0,0">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="CopyMessageItem" Header="Copy Message" Click="CopyMessageItem_Click"/>
                </ContextMenu>
            </Border.ContextMenu>
            <TextBlock x:Name="OtherMessageBox" TextWrapping="Wrap" Text="Memes" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Border>

    </Grid>
</UserControl>
