<UserControl x:Class="MessengerWPF.UserControls.UserPictureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid HorizontalAlignment="Right">
        <Border BorderThickness="1" HorizontalAlignment="Right" VerticalAlignment="Top" Background="#FF422FFF" CornerRadius="8">
            <Image x:Name="ImageContainer" HorizontalAlignment="Right" Margin="1,1,1,0" VerticalAlignment="Top" MaxWidth="480" MaxHeight="320" ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
        </Border>

    </Grid>
</UserControl>
